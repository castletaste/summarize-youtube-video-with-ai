{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "summarize-youtube-video-with-ai",
  "title": "Summarize YouTube Videos with AI",
  "description": "Summarize any YouTube Video with AI. Choose between Raycast AI or ChatGPT. You have to either be a Raycast Pro Member or have an OpenAI API Key.",
  "icon": "extension_icon.png",
  "author": "iKasch",
  "contributors": [
    "castletaste"
  ],
  "categories": [
    "Productivity",
    "Web"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "language",
      "title": "Language",
      "description": "Define the language which the AI should use to summarize the video.",
      "type": "textfield",
      "default": "english",
      "required": false
    },
    {
      "name": "chosenAi",
      "title": "Choose AI",
      "description": "Choose between Raycast AI or ChatGPT",
      "type": "dropdown",
      "default": "raycastai",
      "data": [
        {
          "value": "anthropic",
          "title": "Anthropic Claude"
        },
        {
          "value": "openai",
          "title": "OpenaAI ChatGPT"
        },
        {
          "value": "raycastai",
          "title": "Raycast AI"
        }
      ],
      "required": true
    },
    {
      "name": "model",
      "title": "Model",
      "description": "Choose the model you want to use.",
      "type": "dropdown",
      "default": "anthropic-claude-haiku",
      "data": [
        {
          "value": "anthropic-claude-sonnet",
          "title": "Anthropic Claude Sonnet"
        },
        {
          "value": "anthropic-claude-haiku",
          "title": "Anthropic Claude Haiku"
        },
        {
          "value": "anthropic-claude-opus",
          "title": "Anthropic Claude Opus"
        },
        {
          "value": "gpt-4",
          "title": "OpenAI GPT-4"
        },
        {
          "value": "gpt-4-turbo",
          "title": "OpenAI GPT-4 Turbo"
        },
        {
          "value": "gpt-4o",
          "title": "OpenAI GPT-4o"
        },
        {
          "value": "gpt-4o-mini",
          "title": "OpenAI GPT-4o Mini"
        },
        {
          "value": "llama-3-70b",
          "title": "Llama 3 70B"
        },
        {
          "value": "llama-3.1-8b",
          "title": "Llama 3.1 8B"
        },
        {
          "value": "llama-3.1-405b",
          "title": "Llama 3.1 405B"
        },
        {
          "value": "llama-3.3-70b",
          "title": "Llama 3.3 70B"
        },
        {
          "value": "mixtral-8x7b",
          "title": "Mixtral 8x7B"
        },
        {
          "value": "mistral-nemo",
          "title": "Mistral Nemo"
        },
        {
          "value": "mistral-large2",
          "title": "Mistral Large 2"
        },
        {
          "value": "sonar-small",
          "title": "Perplexity Llama 3.1 Sonar Small"
        },
        {
          "value": "sonar-large",
          "title": "Perplexity Llama 3.1 Sonar Large"
        },
        {
          "value": "sonar-huge",
          "title": "Perplexity Llama 3.1 Sonar Huge"
        }
      ],
      "required": false
    },
    {
      "name": "creativity",
      "title": "Creativity",
      "description": "Choose how creative the AI should be.",
      "type": "textfield",
      "default": "0.1",
      "required": false
    },
    {
      "name": "openaiApiToken",
      "title": "OpenAI API Token",
      "description": "Your OpenAI API Token. Required if you choose ChatGPT as your AI.",
      "type": "password",
      "default": "",
      "required": false
    },
    {
      "name": "anthropicApiToken",
      "title": "Anthropic API Token",
      "description": "Your Anthropic API Token. Required if you choose Anthropic Claude as your AI.",
      "type": "password",
      "default": "",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "summarizeVideo",
      "title": "Summarize YouTube Video",
      "description": "Use AI to create a summary of any YouTube video.",
      "mode": "view",
      "arguments": [
        {
          "name": "video",
          "placeholder": "Video URL or ID",
          "type": "text",
          "required": true
        }
      ]
    },
    {
      "name": "summarizeCurrentTab",
      "title": "Summarize Current Tab",
      "description": "Summarize the current YouTube video in the active tab.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@raycast/api": "^1.88.4",
    "@raycast/utils": "^1.18.1",
    "@types/node-fetch": "^2.6.12",
    "date-fns": "^4.1.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.77.0",
    "youtube-transcript": "^1.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "ytdl-core": "^4.11.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}